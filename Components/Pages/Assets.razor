@page "/assets"
@using MoonMud.DemoApp.Models

<MudCrudGrid T="AssetReadDto" Title="Assets Management" Subtitle="Manage financial instruments"
             Columns="assetColumns" Options="_options"/>

@code {

    private readonly DataGridOptions _options = new DataGridOptions()
    {
        Title = "Assets"
    };

    private readonly IEnumerable<GridColumn<AssetReadDto>> assetColumns = new List<GridColumn<AssetReadDto>>
    {
        new GridColumn<AssetReadDto> { Property = x => x.GlobalId, Title = "Id" },
        new GridColumn<AssetReadDto> { Property = x => x.Name, Title = "Name" },
        new GridColumn<AssetReadDto> { Property = x => x.Type, Title = "Type" },
        new GridColumn<AssetReadDto> { Property = x => x.Symbol, Title = "Symbol" },
        new GridColumn<AssetReadDto> { Property = x => x.CreatedAt, Title = "Created At" }
    };

}
